    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });

        var current_page = 1;
        var records_per_page = 10;

        var data2 = "{{data}}"
        var data = JSON.parse(decodeURI(data2))
        var OpenEvent = [];
        document.getElementById("username").innerHTML = "User : " + data.name

        // ==============Display data================
        function prevPage() {
            if (current_page > 1) {
                current_page--;
                changePage(current_page);
            }
        }

        function nextPage() {
            if (current_page < numPages()) {
                current_page++;
                changePage(current_page);
            }
        }

        function changePage(page) {
            var btn_next = document.getElementById("btn_next");
            var btn_prev = document.getElementById("btn_prev");
            var display_OpenEvent = "<table id='table_Event' class='table table-bordred table-striped justify-content-center text-center'><thead><tr><th>No</th><th>ชื่อกิจกรรม</th><th>จัดโดย</th><th>ภาคการศึกษา</th><th>วันที่</th><th>จัดการคะแนน<br>รายบ้าน</th><th>จัดการคะแนน<br>แบบบุคคล</th></tr></thead>";
            var page_span = document.getElementById("page");

            // Validate page
            if (page < 1) page = 1;
            if (page > numPages()) page = numPages();

            document.getElementById("table_data").innerHTML = ""; // แสดงผลข้อมูลตารางให้ว่าง

            for (var i = (page - 1) * records_per_page; i < (page * records_per_page) && i < data.openevent.length; i++) {
                display_OpenEvent += "<tbody><tr><th>" + (i + 1) + "</th><td>" + data.openevent[i].OpenEvent_Name + "</td><td>" + data.openevent[i].CreatedBy_ID + "</td><td>" + data.openevent[i].OpenEvent_Semeter + "</td><td>" + data.openevent[i].OpenEvent_StartDate + "<br> to <br>" + data.openevent[i].OpenEvent_EndDate + "</td><td><form action='https://coereward.herokuapp.com/IncPointHouse/" + data.openevent[i].OpenEvent_ID + "' method='POST' enctype='multipart/form-data'><p><button class='btn btn-primary btn-xs'  ><i class='fas fa-home'></i></button></p></form></td><td><form action='https://coereward.herokuapp.com/IncPointGroup/" + data.openevent[i].OpenEvent_ID + "' method='POST' enctype='multipart/form-data'><p><button class='btn btn-primary btn-xs'  ><i class='fas fa-users'></i></button></p></form></td></tr></tbody>"
                document.getElementById("table_data").innerHTML = display_OpenEvent
            }
            page_span.innerHTML = "Page " + page; // แสดงผลหน้า

            if (page == 1) {
                btn_prev.style.visibility = "hidden";
            } else {
                btn_prev.style.visibility = "visible";
            }

            if (page == numPages()) {
                btn_next.style.visibility = "hidden";
            } else {
                btn_next.style.visibility = "visible";
            }
        }

        function numPages() {
            return Math.ceil(data.openevent.length / records_per_page);
        }

        window.onload = function () {
            changePage(1);
        };

        // ======== push and sort data ============ 
        for (let i = 0; i < data.openevent.length; i++) {
            OpenEvent.push(data.openevent[i])
            myFunction()

        }
        function myFunction() {
            data.openevent.sort(function (a, b) { return b.Member_Total - a.Member_Total });
            //console.log(Member)
        }

        // search 
        $(document).ready(function () {
            $('#search').keyup(function () {
                search_table($(this).val())
            });

            function search_table(value) {
                $('#table_data tbody').each(function () {
                    var found = 'false';
                    $(this).each(function () {
                        if ($(this).text().toLocaleLowerCase().indexOf(value.toLocaleLowerCase()) >= 0) {
                            found = 'true'
                        }
                    });
                    if (found == 'true') {
                        $(this).show()
                    } else {
                        $(this).hide()
                    }
                })
            }
        })




