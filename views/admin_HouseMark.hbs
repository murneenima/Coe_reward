    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });

        var current_page = 1;
        var records_per_page = 20;

        var dataHouse = "{{data}}"
        var data = JSON.parse(decodeURI(dataHouse))
        var House_Mark = [];
        document.getElementById("username").innerHTML = "User : "+ data.name

        if(data.house.length == 0){
            document.getElementById("btn_prev").hidden = true
            document.getElementById("btn_next").hidden = true
    
        }else{
            // ==============Display data================
        function prevPage(){  
            if (current_page > 1) {
                current_page--;
                changePage(current_page);
            }
        }

        function nextPage(){
            if (current_page < numPages()) {
                current_page++;
                changePage(current_page);
            }
        }

        function changePage(page){
            var btn_next = document.getElementById("btn_next");
            var btn_prev = document.getElementById("btn_prev");
            let display_MemberAll = "<thead><th>No</th><th>Member ID</th><th>Name</th><th>Last Name</th><th>Total Point</th><th>Available Point</th></thead>";
            var page_span = document.getElementById("page");

            // Validate page
            if (page < 1) page = 1;
            if (page > numPages()) page = numPages();

            document.getElementById("member_mark").innerHTML = ""; // แสดงผลข้อมูลตารางให้ว่าง

            for (var i = (page-1) * records_per_page; i < (page * records_per_page) && i < data.house.length; i++) {
                display_MemberAll += "<tbody><tr><td>" + (i + 1) + "</td><td>" + data.house[i].Member_ID + "</td><td>" + data.house[i].Member_Name + "</td><td>" + data.house[i].Member_Lastname + "</td><td>" + data.house[i].Member_Total + "</td><td>" + data.house[i].Member_Available + "</td></tr></tbody>"
                document.getElementById("member_mark").innerHTML = display_MemberAll
            }
            page_span.innerHTML = "Page " + page; // แสดงผลหน้า

            if (page == 1) {
                btn_prev.style.visibility = "hidden";
            } else {
                btn_prev.style.visibility = "visible";
            }

            if (page == numPages()) {
                btn_next.style.visibility = "hidden";
            } else {
                btn_next.style.visibility = "visible";
            }
        }

        function numPages(){
            return Math.ceil(data.house.length / records_per_page);
        }

        window.onload = function() {
            changePage(1);
        };
        }
    
         
        
    
        document.getElementById("total").innerHTML = "Member Total = " + data.house.length
        // ==================== Sorting ==========
        for (let i = 0; i < data.house.length; i++) {
            House_Mark.push(data.house[i])
            myFunction()  
        }
        function myFunction() {
            data.house.sort(function (a, b) { return b.Member_Total - a.Member_Total });
            //console.log(Member)
        }
        // =========== Search============= 
        $(document).ready(function () {
            $('#search').keyup(function () {
                search_table($(this).val())
            });

            function search_table(value) {
                $('#member_mark tbody').each(function () {
                    var found = 'false';
                    $(this).each(function () {
                        if ($(this).text().toLocaleLowerCase().indexOf(value.toLocaleLowerCase()) >= 0) {
                            found = 'true'
                        }
                    });
                    if (found == 'true') {
                        $(this).show()
                    } else {
                        $(this).hide()
                    }
                })
            }
        })


