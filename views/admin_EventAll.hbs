            });
        });

        document.getElementById("username").innerHTML = "User : "+ name
        var current_page = 1;
        var records_per_page = 10;

        var data = "{{data}}"
        var dataAll = JSON.parse(decodeURI(data))
        var AllEvent = [];
        var CreatedBy = [];
        // ==============Display data================
        if(dataAll.event.length == 0){
            document.getElementById("btn_prev").hidden = true
            document.getElementById("btn_next").hidden = true
        }else{
            window.onload = function() {
            changePage(1);
            };
        }
        function prevPage(){  
            if (current_page > 1) {
                current_page--;
                changePage(current_page);
            }
        }

        function nextPage(){
            if (current_page < numPages()) {
                current_page++;
                changePage(current_page);
            }
        }

        function changePage(page){
            var btn_next = document.getElementById("btn_next");
            var btn_prev = document.getElementById("btn_prev");
            let display_Event = "<thead class='table-secondary'><th>No</th><th>ชื่อกิจกรรม</th><th>คะแนน</th><th>จัดกิจกรรมโดย</th><th>สถานที่</th><th>กำหนดการจัดกิจกรรม</th><th>แก้ไขข้อมูล</th></thead>";
            var page_span = document.getElementById("page");

            // Validate page
            if (page < 1) page = 1;
            if (page > numPages()) page = numPages();

            document.getElementById("event").innerHTML = ""; // แสดงผลข้อมูลตารางให้ว่าง

            for (var i = (page-1) * records_per_page; i < (page * records_per_page) && i < dataAll.event.length; i++) {
                display_Event += "<tbody><tr><td>" + (i + 1) + "</td><td>" + dataAll.event[i].AllEvent_Name + "</td><td>" + dataAll.event[i].AllEvent_Point + "</td><td>" + dataAll.event[i].CreatedBy_ID + "</td><td>" + dataAll.event[i].AllEvent_Location + "</td></td><td><form action='http://localhost:3000/event/" + dataAll.event[i].AllEvent_ID + "' method='POST' enctype='multipart/form-data'><p><button class='btn btn-primary btn-xs'>จัดการกิจกรรม</button></p></form></td><td><form action='http://localhost:3000/event/edit/" + dataAll.event[i].AllEvent_ID + "' method='POST'><p><button class='btn btn-info btn-xs'><i class='fas fa-edit'></i> แก้ไข</button></p></form></td></tr></tbody>"
                document.getElementById("event").innerHTML = display_Event
            }
            page_span.innerHTML = "Page " + page; // แสดงผลหน้า

            if (page == 1) {
                btn_prev.style.visibility = "hidden";
            } else {
                btn_prev.style.visibility = "visible";
            }

            if (page == numPages()) {
                btn_next.style.visibility = "hidden";
            } else {
                btn_next.style.visibility = "visible";
            }
        }

        function numPages(){
            return Math.ceil(dataAll.event.length / records_per_page);
        }
        
    
