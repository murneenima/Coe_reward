        var point_elon = 0;
        var point_mark = 0;
        var table_house = '<thead class="thead-light"><tr><th scope="col">Rank</th><th scope="col">House</th><th scope="col">Score</th></tr></thead>'
        var House_Point = [{ name: "Bill Gates", point: 0 },
        { name: "Larry Page", point: 0 },
        { name: "Elon Musk", point: 0 },
        { name: "Mark Zuckerberg", point: 0 },]
        //console.log(dataAll)
        document.getElementById("username").innerHTML = "User : " + dataAll.name

        // ==============Display data================
        function prevPage() {
            if (current_page > 1) {
                current_page--;
                changePage(current_page);
            }
        }

        function nextPage() {
            if (current_page < numPages()) {
                current_page++;
                changePage(current_page);
            }
        }

        function changePage(page) {
            var btn_next = document.getElementById("btn_next");
            var btn_prev = document.getElementById("btn_prev");
            let display_Member = '<thead class="thead-light"><tr><th scope="col">Rank</th><th scope="col">Name</th><th scope="col">Score</th></tr></thead>'
            var page_span = document.getElementById("page");

            // Validate page
            if (page < 1) page = 1;
            if (page > numPages()) page = numPages();

            document.getElementById("member_ranking").innerHTML = ""; // แสดงผลข้อมูลตารางให้ว่าง

            for (let i = (page - 1) * records_per_page; i < (page * records_per_page) && i < dataAll.member.length; i++) {
                myFunction()
                display_Member += "<tbody><tr><td>" + (i + 1) + "</td><td>" + dataAll.member[i].Member_Name + " " + dataAll.member[i].Member_Lastname + "</td><td>" + dataAll.member[i].Member_Total + "</td></tr></tbody>"
                document.getElementById("member_ranking").innerHTML = display_Member
            }
            page_span.innerHTML = "Page " + page; // แสดงผลหน้า

            if (page == 1) {
                btn_prev.style.visibility = "hidden";
            } else {
                btn_prev.style.visibility = "visible";
            }

            if (page == numPages()) {
                btn_next.style.visibility = "hidden";
            } else {
                btn_next.style.visibility = "visible";
            }
        }

        function numPages() {
            return Math.ceil(dataAll.member.length / records_per_page);
        }

        window.onload = function () {
            changePage(1);
        };
        // ==========Push and Sort============
        for (let i = 0; i < dataAll.member.length; i++) {
            Member.push(dataAll.member[i])
            //  myFunction()
        }
        function myFunction() {
            dataAll.member.sort(function (a, b) { return b.Member_Total - a.Member_Total });
            //console.log(Member)
        }

        // ######################### House ##########################
        house_ranking()
        function house_ranking() {
            for (let i = 0; i < dataAll.house.length; i++) {
                // console.log(dataAll.house[i].House_name)
                if (dataAll.house[i].House_name == "Bill Gates") {
                    Bill.push(dataAll.house[i])
                } else if (dataAll.house[i].House_name == "Larry Page") {
                    Larry.push(dataAll.house[i])
                } else if (dataAll.house[i].House_name == "Elon Musk") {
                    Elon.push(dataAll.house[i])
                } else if (dataAll.house[i].House_name == "Mark Zuckerberg") {
                    Mark.push(dataAll.house[i])
                }

            }
            for (let i = 0; i < Bill.length; i++) {
                point_bill = point_bill + Bill[i].House_MemberPoint

            }

            for (let i = 0; i < Larry.length; i++) {
                point_larry = point_larry + Larry[i].House_MemberPoint
            }

            for (let i = 0; i < Elon.length; i++) {
                point_elon = point_elon + Elon[i].House_MemberPoint
            }

            for (let i = 0; i < Mark.length; i++) {
                point_mark = point_mark + Mark[i].House_MemberPoint
            }
            House_Point[0].point = point_bill
            House_Point[1].point = point_larry
            House_Point[2].point = point_elon
            House_Point[3].point = point_mark

            //console.log(House_Point)
            for (let i = 0; i < House_Point.length; i++) {
                myFunction3()
