        <script type="text/javascript">
            $(document).ready(function () {
                $('#sidebarCollapse').on('click', function () {
                    $('#sidebar').toggleClass('active');
                });
            });


            var data2 = "{{data}}"
            var data = JSON.parse(decodeURI(data2))
            var option_id = ' <option value="" disabled selected>Please Select</option>'
            var Member = []
            document.getElementById("username").innerHTML = "User : " + data.name
            //console.log(data)

            for (let i = 0; i < data.member.length; i++) {
                option_id += ' <option value="' + data.member[i].Member_ID + '" >' + data.member[i].Member_ID + '</option>'
            }
            document.getElementById("Member_ID").innerHTML = option_id

            $(document).ready(function () {
                $('.js-example-basic-single').select2();


            });

            $(document).ready(function () {
                $('#Member_ID').on('change', function () {
                    let id = document.getElementById("Member_ID").value
                    //console.log(id)
                    for (let i = 0; i < data.member.length; i++) {
                        if (data.member[i].Member_ID == id) {
                            Member.push(data.member[i])
                        }
                    }
                    //console.log(Member)
                    document.getElementById("Member_Name").value = Member[0].Member_Name
                    document.getElementById("Member_Lastname").value = Member[0].Member_Lastname
                    document.getElementById("Member_House").value = Member[0].Member_House
                    document.getElementById("Member_Point").value = Member[0].Member_Total

                })
            })


