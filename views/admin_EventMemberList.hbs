    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });

        var data2 = "{{data}}"
        var data = JSON.parse(decodeURI(data2))
        var Member = []
        console.log(data)
        var current_page = 1;
        var records_per_page = 20;

        document.getElementById("username").innerHTML = "User : " + data.name

        // รายละเอียด กิจกรรม
        document.getElementById("Event_Name").innerHTML = data.openevent[0].OpenEvent_Name
        document.getElementById("Event_Point").innerHTML = data.openevent[0].OpenEvent_Point
        document.getElementById("Event_StartDate").innerHTML = data.openevent[0].OpenEvent_StartDate
        document.getElementById("Event_EndDate").innerHTML = data.openevent[0].OpenEvent_EndDate

        //แสดงผลกิจกรรม
        member_list()
        function member_list(){
            
            for(let i=0 ; i<data.joinevent.length ; i++){
                for(let j=0;j<data.member.length;j++){
                    if(data.joinevent[i].Member_ID == data.member[j].Member_ID){
                        Member.push(data.member[j])
                    }
                }
            }
            
        }

         function prevPage(){  
            if (current_page > 1) {
                current_page--;
                changePage(current_page);
            }
        }

        function nextPage(){
            if (current_page < numPages()) {
                current_page++;
                changePage(current_page);
            }
        }

        function changePage(page){
            var btn_next = document.getElementById("btn_next");
            var btn_prev = document.getElementById("btn_prev");
            var page_span = document.getElementById("page");
            let display_list = "<thead class='table-secondary'><th>ลำดับ</th><th>รหัสนักศึกษา</th><th>ชื่อ สกุล</th><th>บ้าน</th></thead>";


            // Validate page
            if (page < 1) page = 1;
            if (page > numPages()) page = numPages();

            document.getElementById("list_member").innerHTML = ""; // แสดงผลข้อมูลตารางให้ว่าง

            for (var i = (page-1) * records_per_page; i < (page * records_per_page) && i < Member.length; i++) {
                myFunction()
                display_list +=  "<tbody><tr><td>" + (i + 1) + "</td><td>" + Member[i].Member_ID + "</td><td>" + Member[i].Member_Name +" "+  Member[i].Member_Lastname+ "</td><td>" +  Member[i].Member_House + "</td></tr></tbody>"
            }

            document.getElementById("list_member").innerHTML += display_list
            page_span.innerHTML = "Page " + page; // แสดงผลหน้า

            if (page == 1) {
                btn_prev.style.visibility = "hidden";
            } else {
                btn_prev.style.visibility = "visible";
            }

            if (page == numPages()) {
                btn_next.style.visibility = "hidden";
            } else {
                btn_next.style.visibility = "visible";
            }
        }

        function numPages(){
            return Math.ceil(Member.length / records_per_page);
        }
        function myFunction() {
            Member.sort(function (a, b) { return a.Member_ID - b.Member_ID });
            //console.log(Member)
        }

        window.onload = function() {
            changePage(1);
        };
        

