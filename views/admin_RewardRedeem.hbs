                    document.getElementById("img_member").innerHTML = '  <img src="' + pic + '" class="rounded mx-auto d-block"  height="200" alt="" style="border-radius: 25px;border: 1px solid #DCDCDC;">'

                } else if (Member.length == 0) {
                    $('#error_data').modal({}); 
                    document.getElementById("Member_Name").value = ''
                    document.getElementById("Member_Available").value = ''
                    document.getElementById("img_member").innerHTML = ' '
                }

            });

            $('#Member_RewardQuantity').on('change', function () {
                use_point = document.getElementById("Member_RewardQuantity").value * document.getElementById("Reward_Point1").value
                //console.log(use_point)
                document.getElementById("Member_UsePoint").value = use_point
                document.getElementById("Member_Remain").value = ''
                if(avai_point<use_point){
