        //document.getElementById("username").innerHTML = "User : " + name
        var data2 = "{{data}}"
        var data = JSON.parse(decodeURI(data2))
        let Reward = [];
        var point = 0
        var use_point = 0
        let avai_point =0
        let Option_Reward = '<option  selected disabled>Please select</option>'
        let Option_Quantity = '<option  selected disabled>0</option>'


        for (let i = 0; i < data.reward.length; i++) {
            Reward.push(data.reward[i])
        }
        //console.log(Reward)
        for (let i = 0; i < Reward.length; i++) {
            Option_Reward += '"<option value="' + Reward[i].Reward_Name + '">' + Reward[i].Reward_Name + '</option>"'
        }
        document.getElementById("Reward_Name").innerHTML = Option_Reward
        document.getElementById("save_data").disabled = true



        $(document).ready(function () {

            $('#Reward_Name').on('change', function () {
                let Quantity =0
                var myValue = $(this).val();
                var myText = $.trim($("#Reward_Name :selected").text()).toLowerCase(); // Trim spaces and convert to lowercase for comparison
                for (let i = 0; i < Reward.length; i++) {
                    if (Reward[i].Reward_Name == myValue) {
                        Quantity = Reward[i].Reward_Quantity
                        point = Reward[i].Reward_Point
                        let photo = Reward[i].Reward_Photo
                        document.getElementById("Reward_ID").value = Reward[i].Reward_ID
                        document.getElementById("Reward_Quantity").value = Reward[i].Reward_Quantity
                        document.getElementById("Reward_Point").value = point
                        document.getElementById("Reward_Point1").value = point
                        document.getElementById("img_reward").innerHTML = '  <img src="' + photo + '" class="rounded mx-auto d-block"  height="200" alt="" style="border-radius: 25px;border: 1px solid #DCDCDC;">'
                    }
                }

                // จำนวนที่แลกแต้มได้
                for(let i=0;i<Quantity ;i++){
                    Option_Quantity += "<option  value='"+(i+1)+"'>"+(i+1)+"</option>"
                }
                document.getElementById("Member_RewardQuantity").innerHTML = Option_Quantity
                
                // คะแนน
                use_point = document.getElementById("Member_RewardQuantity").value * document.getElementById("Reward_Point1").value
                document.getElementById("Member_UsePoint").value = use_point
                 if(avai_point<use_point){
                     document.getElementById("Member_Remain").value = ''
                     $('#error_point').modal({}); 
                     return 0 
                }else{
                    document.getElementById("Member_Remain").value = avai_point- use_point 
                    return 0 
                }
            });



            $('#search').on('click', function () {
                document.getElementById("save_data").disabled = false
                var id = document.getElementById("Member_ID").value;
                let Member = [];
            
                for (let i = 0; i < data.member.length; i++) {
                    if (data.member[i].Member_ID == id) {
                        Member.push(data.member[i])
                    }
                }


                if (Member.length == 1) {
                    let name = Member[0].Member_Name + " " + Member[0].Member_Lastname
                    avai_point = Member[0].Member_Available
                    let pic = Member[0].Member_Profile

                    document.getElementById("Member_Name").value = name
