             $('input[name=Admin_ReNewPassword]').change(function() { 
                $("#txtConfirmPassword").keyup(checkPasswordMatch);

              });
             $('input[name=Admin_NewPassword]').change(function() { 
                $("#txtConfirmPassword").keyup(checkPasswordMatch);

              });
        });
        var data2 = "{{data}}"
        var data = JSON.parse(decodeURI(data2))

        document.getElementById("username").innerHTML = "User : " + data.name

        // === display data ====
        display_data()
        function display_data() {
            let image2 = "<img id='img1'  src='" + data.admin.Admin_Profile + "' style='width: 70%;height: auto;margin: 20px;object-fit: cover;object-position: center right;border-radius: 25px;border: 1px solid rgb(69, 73, 63);' class='img-circle img-thumbnail '>"
            document.getElementById("img1").innerHTML = image2
            document.getElementById("Admin_Name").value = data.admin.Admin_Name
            document.getElementById("Admin_Lastname").value = data.admin.Admin_Surname
            document.getElementById("Admin_Username").value = data.admin.Admin_Username
        }

        var imageURL = ""
        function previewFile() {
            var preview = document.querySelector('#img2');
            var file = document.querySelector('input[type=file]').files[0];
            // console.log(preview)
            // console.log(file)
            var reader = new FileReader();

            reader.addEventListener("load", function () {
                preview.src = reader.result;
                imageURL = reader.result
            }, false);

            if (file) {
                reader.readAsDataURL(file);

            }

        }
        
        function ShowModal_Edit() {
            $('#profile').modal('show');
            let image3 = "<img id='img2'  src='" + data.admin.Admin_Profile + "' style='width: 40%;height: auto;;margin: 20px;object-fit: cover;object-position: center right;border-radius: 25px;border: 1px solid rgb(69, 73, 63);' class='img-circle img-thumbnail '>"
            document.getElementById("img_photo").innerHTML = image3

        }
        function ShowModal_password() {
            $('#password').modal('show');
            document.getElementById("Admin_Username2").value = data.admin.Admin_Username
            document.getElementById("change_password").disabled = true
        }

        function POST_Profile() {
            let username = data.admin.Admin_Username
            //console.log('profile will change ' + username)
            //console.log(imageURL)
            $.ajax('http://localhost:3000/changeProfile', {
                data: JSON.stringify({ username, imageURL }),
                contentType: 'application/json',
                type: 'POST',
            })
            location.reload();
        }

        function checkPasswordMatch() {
            var password = $("#Admin_NewPassword").val();
            var confirmPassword = $("#Admin_ReNewPassword").val();

            if (password != confirmPassword){
                document.getElementById("change_password").disabled = true
                $("#divCheckPasswordMatch").html("Passwords doesn't match.");
            }else{
                document.getElementById("change_password").disabled = false
                $("#divCheckPasswordMatch").html("Passwords match.");
            }
                
        }

            
     

