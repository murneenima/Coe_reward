        var data2 = "{{data}}"
        var data = JSON.parse(decodeURI(data2))

        document.getElementById("username").innerHTML = "User : " + data.name
        console.log(data.openevent)

        // ======== Year ======================
        option_year()
        function option_year() {
            let option = '<option value="" disabled selected>-Please Select-</option>'

            for (let i = 0; i < data.year.length; i++) {
                option += '<option value="' + data.year[i].Year_Year + '">' + data.year[i].Year_Year + '</option>'
            }
            document.getElementById("year").innerHTML = option
        }

        // ====== Calendar =================== 

        $(function () {
            $('#year').on('change', function () {
                let year = $(this).val()
                //console.log(year)
                let Year = [];
                for (let i = 0; i < data.year.length; i++) {
                    if (year == data.year[i].Year_Year) {
                        Year.push(data.year[i])
                    }
                }
                //console.log(Year)

                var event2 = [];
                for (let i = 0; i < data.openevent.length; i++) {
                    var myElement = {
                        id: '' + data.openevent[i].OpenEvent_ID,
                        title: '' + data.openevent[i].OpenEvent_Name,
                        start: '' + data.openevent[i].OpenEvent_StartDate + 'T' + data.openevent[i].OpenEvent_StartTime,
                        end: '' + data.openevent[i].OpenEvent_EndDate + 'T' + data.openevent[i].OpenEvent_EndTime,

                    }
                    event2[i] = myElement;
                }
                //console.log(event2)

                var startdate = $.fullCalendar.moment(Year[0].Year_StartDate);
                var enddate = $.fullCalendar.moment(Year[0].Year_EndDate);
                // =========================================================
                $('#calendar').fullCalendar({

                    schedulerLicenseKey: 'GPL-My-Project-Is-Open-Source',//ระบุ license ว่าเราใช้งาน license ประเภทใด
                    editable: true, // enable draggable events
                    aspectRatio: 2.0,
                    scrollTime: '00:00', // undo default 6am scrollTime
                    header: {
                        left: 'today prev,next',
                        center: 'title',
                        right: 'timelineDay,agendaWeek,month'
                    },
                    defaultView: 'timelineDay',
                    validRange: function () {
                        return {
                            start: startdate,
                            end: enddate
                        };
                    },
                    defaultView: 'month',
                    events: event2,
                    eventColor: '#52D2BC',
                });


            });


        });
