        document.getElementById("username").innerHTML = "User : " + name

        var data = "{{data}}"
        var dataEvent = JSON.parse(decodeURI(data))
        var Event = [];
        var EventType = [];
        var CreatedBy = [];
        var select_eventtype = '<option disabled selected>-Please Select-</option>'
        var select_createdby = '<option disabled selected>-Please Select-</option>'

        // ======= Event Type ========
        //console.log(dataEvent)
        for (let i = 0; i < dataEvent.eventtype.length; i++) {
            EventType.push(dataEvent.eventtype[i])
            select_eventtype += '<option>' + EventType[i].EventType_Name + '</option>'
        }
        document.getElementById("Event_Type").innerHTML = select_eventtype

        // ======= Created By ========
        for (let i = 0; i < dataEvent.createdby.length; i++) {
            CreatedBy.push(dataEvent.createdby[i])
            select_createdby += '<option>' + CreatedBy[i].CreatedBy_Name + '</option>'
        }
        document.getElementById("Event_CreatedBy").innerHTML = select_createdby


        // ======= Event =============
        for (let i = 0; i < dataEvent.event.length; i++) {
            Event.push(dataEvent.event[i])

            var image2 = "<img id='img2'  height='200' src='" + Event[i].AllEvent_Picture + "' style='width: 80%;height: auto;margin: 20px;'>"
            document.getElementById("img2").innerHTML = image2
            document.getElementById("Event_ID").value = Event[i].AllEvent_ID
            document.getElementById("Event_Name").value = Event[i].AllEvent_Name
            document.getElementById("Event_Point").value = Event[i].AllEvent_Point
            document.getElementById("Event_Semester").value = Event[i].AllEvent_Semeter
            document.getElementById("Event_Type").value = Event[i].EventType_ID
            document.getElementById("Event_CreatedBy").value = Event[i].CreatedBy_ID
            document.getElementById("Event_Location").value = Event[i].AllEvent_Location
            document.getElementById("Event_Description").value = Event[i].AllEvent_Descrip
            //document.getElementById("Event_Location").value = Event[i].AllEvent_Picture

        }

        var imageURL = ""
        function previewFile() {
            var preview = document.querySelector('img');
            var file = document.querySelector('input[type=file]').files[0];
            var reader = new FileReader();

            reader.addEventListener("load", function () {
                preview.src = reader.result;

                imageURL = reader.result

            }, false);

            if (file) {
                reader.readAsDataURL(file);

            }
        }

