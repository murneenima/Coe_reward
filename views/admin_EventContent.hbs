        var today = new Date().toISOString().split('T')[0];
        document.getElementsByName("Event_StartDate")[0].setAttribute('min', today);
        document.getElementsByName("Event_EndDate")[0].setAttribute('min', today);

        var data = "{{data}}"
        var dataAll = JSON.parse(decodeURI(data))
        var EventType = [];
        var CreatedBy = [];
        var Select_EventType = '<option disabled selected>-Please Select-</option>'
        var Select_CreatedBy = '<option disabled selected>-Please Select-</option>'

        for (let i = 0; i < dataAll.EventType.length; i++) {
            EventType.push(dataAll.EventType[i])
        }
        for (let i = 0; i < dataAll.CreatedBy.length; i++) {
            CreatedBy.push(dataAll.CreatedBy[i])
        }
        for (let i = 0; i < EventType.length; i++) {
            Select_EventType += '<option value="' + EventType[i].EventType_Name + '">' + EventType[i].EventType_Name + '</option>'
        }
        for (let i = 0; i < CreatedBy.length; i++) {
            Select_CreatedBy += '<option value="' + CreatedBy[i].CreatedBy_Name + '">' + CreatedBy[i].CreatedBy_Name + '</option>'
        }
        document.getElementById("Event_Type").innerHTML = Select_EventType
        document.getElementById("Event_CreatedBy").innerHTML = Select_CreatedBy
    </script>
