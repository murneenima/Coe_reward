    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });

        document.getElementById("username").innerHTML = "User : "+ name
        var current_page = 1;
        var records_per_page = 10;

        var data = "{{dataEV}}"
        var dataEV = JSON.parse(decodeURI(data))
        var EventType = [];
        
        // ==============Display data================
        function prevPage(){  
            if (current_page > 1) {
                current_page--;
                changePage(current_page);
            }
        }

        function nextPage(){
            if (current_page < numPages()) {
                current_page++;
                changePage(current_page);
            }
        }

        function changePage(page){
            var btn_next = document.getElementById("btn_next");
            var btn_prev = document.getElementById("btn_prev");
            var table_EventType = "<thead class='thead-light'><th>No</th><th>Event Type</th><th>Delete</th></thead>"
            var page_span = document.getElementById("page");

            // Validate page
            if (page < 1) page = 1;
            if (page > numPages()) page = numPages();

            document.getElementById("table_EventType").innerHTML = ""; // แสดงผลข้อมูลตารางให้ว่าง

            for (var i = (page-1) * records_per_page; i < (page * records_per_page) && i < dataEV.length; i++) {
                table_EventType += "<tbody><tr><td>" + (i + 1) + "</td><td>" + EventType[i].EventType_Name + "</td><td><p data-placement='top' data-toggle='tooltip' title='Delete'><button onclick='ShowModal_deleteEventType(" + i + ")' class='btn btn-danger btn-xs' data-title='Delete' data-toggle='modal'><i class='fas fa-trash-alt'></i></button></p></td></tr></tbody>"
                document.getElementById("table_EventType").innerHTML = table_EventType
            }
            page_span.innerHTML = "Page " + page; // แสดงผลหน้า

            if (page == 1) {
                btn_prev.style.visibility = "hidden";
            } else {
                btn_prev.style.visibility = "visible";
            }

            if (page == numPages()) {
                btn_next.style.visibility = "hidden";
            } else {
                btn_next.style.visibility = "visible";
            }
        }

        function numPages(){
            return Math.ceil(dataEV.length / records_per_page);
        }

        window.onload = function() {
            changePage(1);
        };
        
        //document.getElementById("total").innerHTML = "Member Total = " + dataEV.length        
        // =================== push data ===================
        for (let i = 0; i < dataEV.length; i++) {
            EventType.push(dataEV[i])
            myFunction()  
        }
        function myFunction() {
            dataEV.sort(function (a, b) { return b.Member_Total - a.Member_Total });
            //console.log(Member)
        }

        // =================== Delete Data ====================
        function ShowModal_deleteEventType(index) {
            $('#delete_EventType').data('curid', index); // curid = index
            $('#delete_EventType').modal('show');
        }
        function POST_RemoveEventType() {
            let index = $('#delete_EventType').data('curid')
            let id = EventType[index].EventType_ID
            console.log('Event Type will delete at ' + id)
            $.ajax('http://localhost:3000/removeEventType', {
                data: JSON.stringify({ id }),
                contentType: 'application/json',
                type: 'POST',
            })
            alert(' Event Type ID : ' + id + ' was deleted')
            location.reload();
        }
