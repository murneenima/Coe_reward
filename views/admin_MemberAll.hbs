        document.getElementById("username").innerHTML = "User : "+ name

        var current_page = 1;
        var records_per_page = 10;


        var dataMember = "{{dataMember}}"
        var data_Member = JSON.parse(decodeURI(dataMember)) // array
        var Member = [];
        
        // =====================================
        function prevPage(){  
            if (current_page > 1) {
                current_page--;
                changePage(current_page);
            }
        }

        function nextPage(){
            if (current_page < numPages()) {
                current_page++;
                changePage(current_page);
            }
        }

        function changePage(page){
            var btn_next = document.getElementById("btn_next");
            var btn_prev = document.getElementById("btn_prev");
            //var listing_table = document.getElementById("table_member");
            let display_MemberAll = "<thead><th>No</th><th>Member ID</th><th>Name</th><th>Last Name</th><th>House</th><th>Edit</th></thead>";
            var page_span = document.getElementById("page");

            // Validate page
            if (page < 1) page = 1;
            if (page > numPages()) page = numPages();

            document.getElementById("table_member").innerHTML = ""; // แสดงผลข้อมูลตารางให้ว่าง

            for (var i = (page-1) * records_per_page; i < (page * records_per_page) && i < data_Member.length; i++) {
                //listing_table.innerHTML += data_Member[i].Member_ID + "<br>"; // แสดงผลข้อมูล
                display_MemberAll += "<tbody><tr><td>" + (i + 1) + "</td><td>" + data_Member[i].Member_ID + "</td><td>" + data_Member[i].Member_Name + "</td><td>" + data_Member[i].Member_Lastname + "</td><td>" + data_Member[i].Member_House + "</td></td><td><form action='http://localhost:3000/member/" + data_Member[i].Member_ID + "' method='POST' enctype='multipart/form-data'><p><button class='btn btn-primary btn-xs'  ><i class='fas fa-edit'></i></button></p></form></td></tr></tbody>"
                document.getElementById("table_member").innerHTML = display_MemberAll
            }
            page_span.innerHTML = "Page " + page; // แสดงผลหน้า

            if (page == 1) {
                btn_prev.style.visibility = "hidden";
            } else {
                btn_prev.style.visibility = "visible";
            }

            if (page == numPages()) {
                btn_next.style.visibility = "hidden";
            } else {
                btn_next.style.visibility = "visible";
            }
        }

        function numPages(){
            return Math.ceil(data_Member.length / records_per_page);
        }

        window.onload = function() {
            changePage(1);
        };
        // ========================================
        for (let i = 0; i < data_Member.length; i++) {
            Member.push(data_Member[i])
            myFunction()
        }
        document.getElementById("total").innerHTML = "Member Total = " + data_Member.length

        function myFunction() {
            data_Member.sort(function (a, b) { return a.Member_ID - b.Member_ID });
            //console.log(Member)
        }

        //================== Delete ============
        function ShowModal_deleteMember(index) {
            $('#delete_member').data('curid', index); // curid = index
            $('#delete_member').modal('show');
        }
        function POST_RemoveMember() {
            let index = $('#delete_member').data('curid')
            let id = Member[index].Member_ID
            // console.log('Member will delete at ' + id)
            $.ajax('http://localhost:3000/removeMember', {
                data: JSON.stringify({ id }),
                contentType: 'application/json',
                type: 'POST',
            })
            alert(' Member ID : ' + id + ' was deleted')
            location.reload();
        }

        // =================== search by ID ======================
        $(document).ready(function () {
            $('#search').keyup(function () {
                search_table($(this).val())
            });

            function search_table(value) {
                $('#table_member tbody').each(function () {
                    var found = 'false';
                    $(this).each(function () {
                        if ($(this).text().toLocaleLowerCase().indexOf(value.toLocaleLowerCase()) >= 0) {
                            found = 'true'
                        }
                    });
                    if (found == 'true') {
                        $(this).show()
                    } else {
                        $(this).hide()
                    }
                })
            }
        })

