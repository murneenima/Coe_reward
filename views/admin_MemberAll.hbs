            });
        });

        var current_page = 1;
        var records_per_page = 10;


        var dataMember = "{{data}}"
        var data = JSON.parse(decodeURI(dataMember)) // array
        var Member = [];
        var House = [];
        var Bill = [];
        var Larry = [];
        var Elon = [];
        var Mark = [];
        var point_bill = 0;
        var point_larry = 0;
        var point_elon = 0;
        var point_mark = 0;
        var house_rank = ''
        var House_Point = [{ name: "Bill Gates", point: 0, img: '<img height=80  src="https://www.img.in.th/images/b425b7783179077c8e07589dc8b4d2c8.png" alt="b425b7783179077c8e07589dc8b4d2c8.png" border="0">' },
        { name: "Larry Page", point: 0, img: '<img height=80  src="https://www.img.in.th/images/6cc2a6bc69a63d23dd5381e182b0b910.png" alt="6cc2a6bc69a63d23dd5381e182b0b910.png" border="0">' },
        { name: "Elon Musk", point: 0, img: '<img height=80  src="https://www.img.in.th/images/2b459284d57f9a33e0c384ed1b4b78f7.png" alt="2b459284d57f9a33e0c384ed1b4b78f7.png" border="0">' },
        { name: "Mark Zuckerberg", point: 0, img: '<img height=80 src="https://www.img.in.th/images/475c4ffba686c48d6e0b86bad1a84f7d.png" alt="475c4ffba686c48d6e0b86bad1a84f7d.png" border="0">' },]

        document.getElementById("username").innerHTML = "User : " + data.name
        // =====================================

        if (data.member.length == 0) {
            document.getElementById("btn_prev").hidden = true
            document.getElementById("btn_next").hidden = true
        } else {
            function prevPage() {
                if (current_page > 1) {
                    current_page--;
                    changePage(current_page);
                }
            }

            function nextPage() {
                if (current_page < numPages()) {
                    current_page++;
                    changePage(current_page);
                }
            }

            function changePage(page) {
                var btn_next = document.getElementById("btn_next");
                var btn_prev = document.getElementById("btn_prev");
                //var listing_table = document.getElementById("table_member");
                let display_MemberAll = "<thead><th>No</th><th>Member ID</th><th>Name Lastname</th><th>House</th><th>Point</th><th>Edit</th></thead>";
                var page_span = document.getElementById("page");

                // Validate page
                if (page < 1) page = 1;
                if (page > numPages()) page = numPages();

                document.getElementById("table_member").innerHTML = ""; // แสดงผลข้อมูลตารางให้ว่าง

                for (var i = (page - 1) * records_per_page; i < (page * records_per_page) && i < data.member.length; i++) {
                    //listing_table.innerHTML += data.member[i].Member_ID + "<br>"; // แสดงผลข้อมูล
                    display_MemberAll += "<tbody><tr><td>" + (i + 1) + "</td><td>" + data.member[i].Member_ID + "</td><td>" + data.member[i].Member_Name + " " + data.member[i].Member_Lastname + "</td><td>" + data.member[i].Member_House + "</td><td>" + data.member[i].Member_Total + "</td></td><td><form action='http://localhost:3000/member/" + data.member[i].Member_ID + "' method='POST' enctype='multipart/form-data'><p><button class='btn btn-primary btn-xs'  ><i class='fas fa-edit'></i></button></p></form></td></tr></tbody>"
                    document.getElementById("table_member").innerHTML = display_MemberAll
                }
                page_span.innerHTML = "Page " + page; // แสดงผลหน้า

                if (page == 1) {
                    btn_prev.style.visibility = "hidden";
                } else {
                    btn_prev.style.visibility = "visible";
                }

                if (page == numPages()) {
                    btn_next.style.visibility = "hidden";
                } else {
                    btn_next.style.visibility = "visible";
                }
            }

            function numPages() {
                return Math.ceil(data.member.length / records_per_page);
            }

            window.onload = function () {
                changePage(1);
            };
        }

        // ========================================
        for (let i = 0; i < data.member.length; i++) {
            Member.push(data.member[i])
            myFunction()
        }
        document.getElementById("total").innerHTML = 'Members : ' + data.member.length + '   <i class="fas fa-users"></i> '

        function myFunction() {
            data.member.sort(function (a, b) { return a.Member_ID - b.Member_ID });
            //console.log(Member)
        }

        //================== Delete ============
        function ShowModal_deleteMember(index) {
            $('#delete_member').data('curid', index); // curid = index
            $('#delete_member').modal('show');
        }
        function POST_RemoveMember() {
            let index = $('#delete_member').data('curid')
            let id = Member[index].Member_ID
            // console.log('Member will delete at ' + id)
            $.ajax('http://localhost:3000/removeMember', {
                data: JSON.stringify({ id }),
                contentType: 'application/json',
                type: 'POST',
            })
            alert(' Member ID : ' + id + ' was deleted')
            location.reload();
        }

        // =================== search by ID ======================
        $(document).ready(function () {
            $('#search').keyup(function () {
                search_table($(this).val())
            });

            function search_table(value) {
                $('#table_member tbody').each(function () {
                    var found = 'false';
                    $(this).each(function () {
                        if ($(this).text().toLocaleLowerCase().indexOf(value.toLocaleLowerCase()) >= 0) {
                            found = 'true'
                        }
                    });
                    if (found == 'true') {
                        $(this).show()
                    } else {
                        $(this).hide()
                    }
                })
            }
        })

        // ===================== House Ranking ===================
        house_ranking()
        function house_ranking() {
            for (let i = 0; i < data.house.length; i++) {
                // console.log(data.house[i].House_name)
                if (data.house[i].House_name == "Bill Gates") {
                    Bill.push(data.house[i])
                } else if (data.house[i].House_name == "Larry Page") {
                    Larry.push(data.house[i])
                } else if (data.house[i].House_name == "Elon Musk") {
                    Elon.push(data.house[i])
                } else if (data.house[i].House_name == "Mark Zuckerberg") {
                    Mark.push(data.house[i])
                }

            }
            for (let i = 0; i < Bill.length; i++) {
                point_bill = point_bill + Bill[i].House_MemberPoint

            }

            for (let i = 0; i < Larry.length; i++) {
                point_larry = point_larry + Larry[i].House_MemberPoint
            }

            for (let i = 0; i < Elon.length; i++) {
                point_elon = point_elon + Elon[i].House_MemberPoint
            }

            for (let i = 0; i < Mark.length; i++) {
                point_mark = point_mark + Mark[i].House_MemberPoint
            }
            House_Point[0].point = point_bill
            House_Point[1].point = point_larry
            House_Point[2].point = point_elon
            House_Point[3].point = point_mark

            for (let i = 0; i < House_Point.length; i++) {
                myFunction3()
                house_rank += '<div class="col m-3"><div class="row d-flex justify-content-center"><div class="col " style="border: 2px solid rgb(20, 36, 109);padding: 10px;border-radius: 20px;"><div class="row d-flex justify-content-center">' + House_Point[i].img + '</div><div class="row d-flex justify-content-center"><h2>' + House_Point[i].point + '</h2></div></div></div><div class="row mt-2 d-flex justify-content-center"><h4 style="color:rgb(99, 151, 20)" class="text-center">' + House_Point[i].name + '</h4></div></div>'
                document.getElementById("house_point").innerHTML = house_rank
            }
        }
        function myFunction3() {
            House_Point.sort(function (a, b) { return b.point - a.point });
        }

