        var data = "{{data}}"
        var data_all = JSON.parse(decodeURI(data))
        var dataEvent = [];
        var EventType = []
        var CreatedBy = [];
        var Year = [];

        let display_et = "<option disabled selected>-Please Select-</option>"
        let display_cb = "<option disabled selected>-Please Select-</option>"
        let display_year = "<option disabled selected>-Please Select-</option>"

        for (let i = 0; i < data_all.event.length; i++) {
            dataEvent.push(data_all.event[i])
        }
        for (let i = 0; i < data_all.eventtype.length; i++) {
            EventType.push(data_all.eventtype[i])
        }
        for (let i = 0; i < data_all.createdby.length; i++) {
            CreatedBy.push(data_all.createdby[i])
        }
        for (let i = 0; i < data_all.year.length; i++) {
            Year.push(data_all.year[i])
        }
        //console.log(EventType)

        var image2 = "<img id='img1'  height='200' src='" + dataEvent[0].AllEvent_Picture + "' style='width: 80%;height: auto;margin: 20px;'>"
        document.getElementById("Event_ID").value = dataEvent[0].AllEvent_ID
        document.getElementById("Event_Name").value = dataEvent[0].AllEvent_Name
        document.getElementById("Event_Point").value = dataEvent[0].AllEvent_Point
        document.getElementById("Event_Location").value = dataEvent[0].AllEvent_Location
        document.getElementById("Event_Description").value = dataEvent[0].AllEvent_Descrip
        document.getElementById("Event_Semester").value = dataEvent[0].AllEvent_Semeter


        for (let i = 0; i < EventType.length; i++) {
            display_et += "<option value=" + EventType[i].EventType_Name + ">" + EventType[i].EventType_Name + "</option>"
        }
        for (let i = 0; i < CreatedBy.length; i++) {
            display_cb += "<option value=" + CreatedBy[i].CreatedBy_Name + ">" + CreatedBy[i].CreatedBy_Name + "</option>"
        }
        for (let i = 0; i < Year.length; i++) {
            display_year += "<option value=" + Year[i].Year_Year + ">" + Year[i].Year_Year + "</option>"
        }
        document.getElementById("Event_Type").innerHTML = display_et
        document.getElementById("Event_CreatedBy").innerHTML = display_cb
        document.getElementById("img1").innerHTML = image2
        document.getElementById("Event_Year").innerHTML = display_year

        document.getElementById("Event_Type").value = dataEvent[0].EventType_ID
        document.getElementById("Event_CreatedBy").value = dataEvent[0].CreatedBy_ID
      

        var imageURL = ""
        function previewFile() {
            var preview = document.querySelector('img');
            var file = document.querySelector('input[type=file]').files[0];
            var reader = new FileReader();

            reader.addEventListener("load", function () {
                preview.src = reader.result;
                imageURL = reader.result
            }, false);

            if (file) {
                reader.readAsDataURL(file);

            }
        }


