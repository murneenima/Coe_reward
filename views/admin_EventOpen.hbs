            <div class="container">
                <form  method="POST" enctype="multipart/form-data">
                    <div class="row m-4 ">
                        <div class="col-2">
                            <label for="Event_Name" class="col-form-label">Event Name</label>
                        </div>
                        <div class="col-8">
                            <input type="text" class="form-control" id="Event_Name" name="Event_Name" placeholder="ชื่อกิจกรรม" required>
                        </div>
                    </div>
                    <div class="row m-4 ">
                        <div class="col-2">
                            <label for="Event_Point" class="col-form-label">Point</label>
                        </div>
                        <div class="col-3">
                            <input type="number" class="form-control" id="Event_Point" name="Event_Point" placeholder="คะแนน" required>
                        </div>
                    </div>
                    <div class="row m-4">
                        <div class="col-2">
                            <label for="Event_StartDate" class="col-form-label">Start Date</label>
                        </div>
                        <div class="col-3">

                            <input type="date" class="form-control" id="Event_StartDate" name="Event_StartDate" required>
                        </div>
                        <div class="col-2">
                            <label for="Event_EndDate" class="col-form-label">End Date</label>
                        </div>
                        <div class="col-3">
                            <input type="date" class="form-control" id="Event_EndDate" name="Event_EndDate" required>

                        </div>
                    </div>
                    <div class="row m-4">
                        <div class="col-2">
                            <label for="Event_EndDate" class="col-form-label">Time (24 hours)</label>
                        </div>
                        <div class="col-3">
                            <div class="row mt-2">
                                <div class="col">
                                    <input type="time" min="8:00" max="22:00" required class="form-control" id="Event_StartTime" name="Event_StartTime">
                                </div>
                            </div>
                            <div class="row mt-1 text-center">
                                <div class="col">
                                    <span>to</span>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col">
                                    <input type="time" min="8:00" max="22:00" required class="form-control" id="Event_EndTime" name="Event_EndTime">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row m-4">
                        <div class="col-2">
                            <label for="Event_Semester" class="col-form-label">Semester</label>
                        </div>
                        <div class="col-3">
                            <select class="form-control" id="Event_Semester" name="Event_Semester" required>
                                <option disabled selected>-Please Select-</option>
                                <option value="1">Semester 1</option>
                                <option value="2">Semester 2</option>
                                <option value="3">Semester 3</option>
                            </select>
                        </div>
                    </div>
                    <div class="row m-4">
                        <div class="col-2">
                            <label for="Event_Type" class="col-form-label">ประเภทของกิจกรรม</label>
                        </div>
                        <div class="col-3">
                            <select class="form-control" id="Event_Type" name="Event_Type" required>

                            </select>
                        </div>
                        <div class="col-2">
                            <label for="Event_CreatedBy" class="col-form-label">จัดโดย</label>
                        </div>
                        <div class="col-3">
                            <select class="form-control" id="Event_CreatedBy" name="Event_CreatedBy" required>

                            </select>
                        </div>
                    </div>
                    <div class="row m-4">
