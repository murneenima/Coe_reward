            document.getElementById("username").innerHTML = "User : " + data.name
            var Behavior = []
            for (let i = 0; i < data.Behavior.length; i++) {
                Behavior.push(data.Behavior[i])
            }
            for (let i = 0; i < Behavior.length; i++) {
                document.getElementById("Behavior_ID").value = Behavior[0].Behavior_ID
                document.getElementById("Behavior_Name").value = Behavior[0].Behavior_Name
                document.getElementById("Behavior_Point").value = Behavior[0].Behavior_Point
                document.getElementById("Behavior_Description").value = Behavior[0].Behavior_Description
            }
            document.getElementById("button_save").disabled = true

            member()
            function member() {
                var Member = [];
                var table_Member = '<thead class="thead-light"><tr><th scope="col">รหัสนักศึกษา</th><th scope="col">ชื่อ-นามสกุล</th><th scope="col" class="text-center">บ้าน</th><th scope="col" class="text-center">ลบ</th></tr></thead>'

                for (let i = 0; i < data.Member.length; i++) {
                    myFunction()
                    Member.push(data.Member[i])
                    table_Member += '<tbody><tr><td>' + data.Member[i].Member_ID + '</a></td><td class="text-center">' + data.Member[i].Member_Name + ' ' + data.Member[i].Member_Lastname + '</td><td>' + data.Member[i].Member_House + '</td><td><button type="button" class="btn btn-danger" onclick="removeSelectedRow()">Delete</button></td></tr>'

                }
                document.getElementById("table_member").innerHTML = table_Member
            }

            // select ปีการศึกษา
            $(document).ready(function () {
                document.getElementById("button_save").disabled = false
                $('#house').on('change', function () {
                    reward_select_year($(this).val())
                    // console.log($(this).val())
                });

                function reward_select_year(value) {
                    $('#table_member tbody').each(function () {
                        var found = 'false';
                        $(this).each(function () {
                            //console.log($(this).text().toLocaleLowerCase().indexOf(value.toLocaleLowerCase()))
                            if ($(this).text().toLocaleLowerCase().indexOf(value.toLocaleLowerCase()) >= 0) {
                                found = 'true'
                            }
                        });
                        if (found == 'true') {
                            $(this).show()
                        } else {
                            $(this).hide()
                        }
                        if (value == 'All') {
                            $(this).show()
                        }
                    })
                }
            })

            function removeSelectedRow() {
                let rIndex, table_data = document.getElementById("table_member");
                for (let i = 0; i < table_data.rows.length; i++) {
                    table_data.rows[i].onclick = function () {
                        rIndex = this.rowIndex;
                        // console.log(rIndex)
                        table_data.deleteRow(rIndex);
                    };
                }
            }

            function myFunction() {
                data.Member.sort(function (a, b) { return a.Member_ID - b.Member_ID });
                //console.log(Member)
            }


            $('#button_save').click(function () {
            var dataArr = [];
            let id_behavior = Behavior[0].Behavior_ID
            let point_behavior = Behavior[0].Behavior_Point
            let behavior_name = Behavior[0].Behavior_Name

            $("td").each(function () {
                dataArr.push($(this).html());
            });
            //console.log(dataArr)
            //console.log(dataArr[5])
            for (let i = 0; i < dataArr.length; i++) {
                if (i % 4 == 0) {
                    let id = dataArr[i]
                    $.ajax('http://localhost:3000/saveDecPointGroup', {
                        data: JSON.stringify({ id, id_behavior, point_behavior, behavior_name }),
                        contentType: "application/json", // this
                        dataType: "json",
                        type: "POST",
                    });
                    location.reload();
                }

            }
        });

