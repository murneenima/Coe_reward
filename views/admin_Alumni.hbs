    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
        var data2 = "{{data}}"
        var data = JSON.parse(decodeURI(data2))
        document.getElementById("username").innerHTML = "User : " + data.name
        
        var current_page = 1;
        var records_per_page = 20;
        var Alumni = [];
       for(let i=0;i<data.alumni.length;i++){
           Alumni.push(data.alumni[i])
        }
        console.log(Alumni)
        if(data.alumni.length == 0){
            document.getElementById("btn_prev").hidden = true
            document.getElementById("btn_next").hidden = true
        }else{
            function prevPage(){  
            if (current_page > 1) {
                current_page--;
                changePage(current_page);
            }
        }

        function nextPage(){
            if (current_page < numPages()) {
                current_page++;
                changePage(current_page);
            }
        }

        function changePage(page){
            var btn_next = document.getElementById("btn_next");
            var btn_prev = document.getElementById("btn_prev");
            //var listing_table = document.getElementById("table_member");
            let display_MemberAll = "<thead><th>No</th><th>Member ID</th><th>Name</th><th>Last Name</th><th>House</th><th>Total Point</th></thead>";
            var page_span = document.getElementById("page");

            // Validate page
            if (page < 1) page = 1;
            if (page > numPages()) page = numPages();

            document.getElementById("table_alumni").innerHTML = ""; // แสดงผลข้อมูลตารางให้ว่าง

            for (var i = (page-1) * records_per_page; i < (page * records_per_page) && i < data.alumni.length; i++) {
                myFunction()
                display_MemberAll += "<tbody><tr><td>" + (i + 1) + "</td><td>" + data.alumni[i].Alumni_ID + "</td><td>" + data.alumni[i].Alumni_Name + "</td><td>" + data.alumni[i].Alumni_Lastname + "</td><td>" + data.alumni[i].Alumni_House + "</td></td><td>"+data.alumni[i].Alumni_Total+"</td></tr></tbody>"
                document.getElementById("table_alumni").innerHTML = display_MemberAll
            }
            page_span.innerHTML = "Page " + page; // แสดงผลหน้า

            if (page == 1) {
                btn_prev.style.visibility = "hidden";
            } else {
                btn_prev.style.visibility = "visible";
            }

            if (page == numPages()) {
                btn_next.style.visibility = "hidden";
            } else {
                btn_next.style.visibility = "visible";
            }
        }

        function numPages(){
            return Math.ceil(data.alumni.length / records_per_page);
        }

        window.onload = function() {
            changePage(1);
        };
        }
        function myFunction() {
            data.alumni.sort(function (a, b) { return a.Alumni_ID - b.Alumni_ID });
            //console.log(Member)
        }



