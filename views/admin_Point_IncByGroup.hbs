        function Add_Row() {
            let table_data = document.getElementById("table_data"),
                newRow = table_data.insertRow(table_data.length),
                cell1 = newRow.insertCell(0),
                cell2 = newRow.insertCell(1),
                cell3 = newRow.insertCell(2),
                cell4 = newRow.insertCell(3),
                cell5 = newRow.insertCell(4);

            let id = document.getElementById("Member_ID").value;
            let name = document.getElementById("Member_Name").value;
            let lastname = document.getElementById("Member_Lastname").value;
            let house = document.getElementById("Member_House").value;

            cell1.innerHTML = id
            cell2.innerHTML = name
            cell3.innerHTML = lastname
            cell4.innerHTML = house
            cell5.innerHTML = '<button type="button" class="btn btn-danger" onclick="removeSelectedRow()">Delete</button>'
        }

        function removeSelectedRow() {
            let rIndex, table_data = document.getElementById("table_data");
            for (let i = 0; i < table_data.rows.length; i++) {
                table_data.rows[i].onclick = function () {
                    rIndex = this.rowIndex;
                    // console.log(rIndex)
                    table_data.deleteRow(rIndex);
                };
            }
        }

        option_id()
        function option_id() {
            for (let i = 0; i < data.Member.length; i++) {
                option += '<option value="' + data.Member[i].Member_ID + '" >' + data.Member[i].Member_ID + '</option>'
            }
            document.getElementById("Member_ID").innerHTML = option
        }


