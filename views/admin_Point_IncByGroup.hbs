        $(document).ready(function () {
            $('#Member_ID').on('change', function () {
                let id = document.getElementById("Member_ID").value
                let Member = []
                //console.log(id)
                for (let i = 0; i < data.Member.length; i++) {
                    if (data.Member[i].Member_ID == id) {
                        //console.log(Member[i].Member_ID)
                        Member.push(data.Member[i])
                    }
                }

                $('#dataMember').modal('show');
                document.getElementById("sendServer").disabled = false
                document.getElementById("Member_ID").value = Member[0].Member_ID
                document.getElementById("Member_Name").value = Member[0].Member_Name
                document.getElementById("Member_Lastname").value = Member[0].Member_Lastname
                document.getElementById("Member_House").value = Member[0].Member_House

            })
        })

        $('#sendServer').click(function () {
            var dataArr = [];
            let id_event = Event[0].OpenEvent_ID
            let point_event = Event[0].OpenEvent_Point
            let event_name = Event[0].OpenEvent_Name
            console.log(id_event)
            $("td").each(function () {
                dataArr.push($(this).html());
            });
            //console.log(dataArr)
            //console.log(dataArr[5])
            for (let i = 0; i < dataArr.length; i++) {
                if (i % 5 == 0) {
                    let id = dataArr[i]
                    $.ajax('https://coereward.herokuapp.com/savePointByGroup', {
                        data: JSON.stringify({ id, id_event, point_event, event_name }),
                        contentType: "application/json", // this
                        dataType: "json",
                        type: "POST",
                    });
