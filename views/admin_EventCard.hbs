    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });

        var data2 = "{{data}}"
        var data = JSON.parse(decodeURI(data2))
        var username = data2.name
        var current_page = 1;
        var records_per_page = 9;
        var option = ' <option value="" disabled selected>Please Select</option><option value="All Event" >All Event</option>'
        let event_card = ""



        document.getElementById("username").innerHTML = "User : " + data.name

        for (let i = 0; i < data.openevent.length; i++) {
            option += ' <option value="' + data.openevent[i].OpenEvent_StartDate + '" >' + data.openevent[i].OpenEvent_StartDate + '</option>'
        }
        document.getElementById("day").innerHTML = option

        function sort_date() {
            data.openevent.sort(function (a, b) { return a.OpenEvent_StartDate - b.OpenEvent_StartDate });
            //console.log(Member)
        }

        // ==========================Display data==================================
        function prevPage() {
            if (current_page > 1) {
                current_page--;
                changePage(current_page);
            }
        }

        function nextPage() {
            if (current_page < numPages()) {
                current_page++;
                changePage(current_page);
            }
        }

        function changePage(page) {
            var btn_next = document.getElementById("btn_next");
            var btn_prev = document.getElementById("btn_prev");
            var page_span = document.getElementById("page");

            // Validate page
            if (page < 1) page = 1;
            if (page > numPages()) page = numPages();

            document.getElementById("event_card").innerHTML = ""; // แสดงผลข้อมูลตารางให้ว่าง

            for (var i = (page - 1) * records_per_page; i < (page * records_per_page) && i < data.openevent.length; i++) {

                sort_date()
                if (i % 3 == 0) {
                    event_card += '<div class="card-deck m-3"><div class="card  " style="max-width: 30%;"><img class="card-img-top rounded mx-auto d-block" height="180" src="' + data.openevent[i].OpenEvent_Picture + '" alt="Card image cap"><div class="card-body"><a href="https://coereward.herokuapp.com/displayOpenEvnt/' + data.openevent[i].OpenEvent_ID + '">' + data.openevent[i].OpenEvent_Name + '</a><p class="card-text">จำนวนคะแนน : ' + data.openevent[i].OpenEvent_Point + '<br>วันเริ่มกิจกรรม : ' + data.openevent[i].OpenEvent_StartDate + '</p></div></div>'

                } else if (i % 3 == 2) {
                    event_card += '<div class="card  " style="max-width: 30%;"><img class="card-img-top rounded mx-auto d-block" height="180"  src="' + data.openevent[i].OpenEvent_Picture + '" alt="Card image cap"><div class="card-body"><a href="https://coereward.herokuapp.com/displayOpenEvnt/' + data.openevent[i].OpenEvent_ID + '">' + data.openevent[i].OpenEvent_Name + '</a><p class="card-text">จำนวนคะแนน : ' + data.openevent[i].OpenEvent_Point + '<br>วันเริ่มกิจกรรม : ' + data.openevent[i].OpenEvent_StartDate + '</p></div></div></div>'

                } else {
                    event_card += '<div class="card  " style="max-width: 30%;"><img class="card-img-top rounded mx-auto d-block" height="180"  src="' + data.openevent[i].OpenEvent_Picture + '" alt="Card image cap"><div class="card-body"><a href="https://coereward.herokuapp.com/displayOpenEvnt/' + data.openevent[i].OpenEvent_ID + '">' + data.openevent[i].OpenEvent_Name + '</a><p class="card-text">จำนวนคะแนน : ' + data.openevent[i].OpenEvent_Point + '<br>วันเริ่มกิจกรรม : ' + data.openevent[i].OpenEvent_StartDate + '</p></div></div>'

                }
                document.getElementById("event_card").innerHTML = event_card


            }
            page_span.innerHTML = "Page " + page; // แสดงผลหน้า

            if (page == 1) {
                btn_prev.style.visibility = "hidden";
            } else {
                btn_prev.style.visibility = "visible";
            }

            if (page == numPages()) {
                btn_next.style.visibility = "hidden";
            } else {
                btn_next.style.visibility = "visible";
            }
        }

        function numPages() {
            return Math.ceil(data.openevent.length / records_per_page);
        }

         window.onload = function () {
                        changePage(1);
                    };

