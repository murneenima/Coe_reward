            document.getElementById("OpenEvent_Location").innerHTML = Event[0].OpenEvent_Location
        }
        document.getElementById("button_save").disabled = true

        function search_id() {
            document.getElementById("Member_ID").value = null
            document.getElementById("Member_Name").value = null
            document.getElementById("Member_Lastname").value = null
            document.getElementById("Member_House").value = null

            let id = document.getElementById("SearchData").value
            // console.log(id)
            let Member = [];
            for (let i = 0; i < data.Member.length; i++) {
                if (data.Member[i].Member_ID === id) {
                    //console.log(Member[i].Member_ID)
                    Member.push(data.Member[i])
                }
            }
            if (Member.length == 1) {
                document.getElementById("Member_ID").value = Member[0].Member_ID
                document.getElementById("Member_Name").value = Member[0].Member_Name
                document.getElementById("Member_Lastname").value = Member[0].Member_Lastname
                document.getElementById("Member_House").value = Member[0].Member_House
                document.getElementById("button_save").disabled = false
            } else if (Member.length == 0) {
                $('#error_data').modal({});
                document.getElementById("button_save").disabled = true
                document.getElementById("Member_ID").value = ''
                document.getElementById("Member_Name").value = ''
                document.getElementById("Member_Lastname").value = ''
                document.getElementById("Member_House").value = ''
            }
        }
